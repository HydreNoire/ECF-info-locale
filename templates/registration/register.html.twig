{% extends 'base.html.twig' %}

{% block title %}
  Register
{% endblock %}

{% block body %}
  <section class="container-fluid d-flex justify-content-center align-items-center my-5">
    <div class="d-flex justify-content-center align-items-center flex-column bg-info rounded p-5">
      <h1 class="mb-3 align-self-start">
        Inscris-toi
      </h1>

      {{ form_start(registrationForm) }}
      {{ form_row(registrationForm.email) }}
      {{
        form_row(
          registrationForm.plainPassword,
          {
            label: 'Mot de Passe'
          }
        )
      }}

      <button type="submit" class="btn btn-primary align-self-start">
        Inscription
      </button>
      {{ form_end(registrationForm) }}
    </div>
  </section>
{% endblock %}
