{% extends 'base.html.twig' %}

{% block title %}
  Infos Locales
{% endblock %}

{% block body %}
  <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font:
    18px/1.5 sans-serif; } .example-wrapper code { background: #F5F5F5; padding:
    2px 6px; }
  </style>

  <div class="example-wrapper">
    <h1 class="pb-4 mb-4 fw-bolder border-bottom">
      Info Locale
    </h1>

    <h2 class="mb-3">
      Derni√®res informations :
    </h2>

    <div>
      {% for article in articles %}
        <div class="card my-5">
            <div class="card-body">
                <h3 class='card-title'>
                    <a href="{{
                    path(
                        'show_article',
                        {
                        id: article.id
                        }
                    )
                    }}">
                    {{ article.title }}
                    </a>
                </h3>

                <p class='card-text'>
                    {{ article.excerpt }}
                </p>
            </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
