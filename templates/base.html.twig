<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>
      {% block title %}
        Info Locale
      {% endblock %}
    </title>
    <link rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>" />
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous" />
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"></script>
    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
      {{ encore_entry_script_tags('app') }}
    {% endblock %}
  </head>
  <body>
    {% if is_granted('ROLE_ADMIN') %}
      <nav class="py-2 bg-dark">
        <div class="container d-flex flex-wrap">
          <div class="dropdown">
            <a class="nav nav-link dropdown-toggle text-white"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false">
              Mon blog
            </a>
            <ul class="dropdown-menu">
              <li>
                <a class="dropdown-item" href="{{ path('admin') }}">
                  Tableau de bord
                </a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    {% endif %}

    <div class="navbar navbar-expand-lg bg-primary">
      <div class="container-fluid">
        <a class="navbar-brand text-white" href="{{ path('app_home') }}">
          Accueil
        </a>
        <button class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            {% if app.user %}

            {% else %}
              <li class="nav-item">
                <a class="nav-link btn btn-info my-3 my-md-0 mx-md-3 text-white"
                  href="{{ path('app_register') }}">
                  S'incrire
                </a>
              </li>
            {% endif %}

            {% if app.user %}
              <li class="nav-item">
                <a class="nav-link btn btn-danger text-white"
                  href="{{ path('app_logout') }}">
                  Se déconnecter
                </a>
              </li>
            {% else %}
              <li class="nav-item">
                <a class="nav-link btn btn-secondary text-white"
                  href="{{ path('app_login') }}">
                  Se connecter
                </a>
              </li>
            {% endif %}
          </ul>
        </div>
      </div>
    </div>

    {% block body %}

    {% endblock %}

    <div class="container">
      <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 mx-3 border-top fixed-bottom">
        <div class="col-md-4 d-flex align-items-center">
          <span class="copyright">
            {{ 'now'|date('Y') }} - COPYRIGHT | Tout droits réservés
          </span>
        </div>
      </footer>
    </div>
  </body>
</html>
